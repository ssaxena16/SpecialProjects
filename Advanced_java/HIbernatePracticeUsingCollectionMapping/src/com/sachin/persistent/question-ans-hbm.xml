<hibernate-mapping>

<class name = "com.sachin.persistent.Question" table= "question1">
<id name= "questionNo">
<generator class="increment"></generator>
</id>
<property name="question" type = "string"></property>

<set name="answer" table = "answer1">
<key column="questionNo"></key>
<element column="answer" type = "string"></element>
</set>

</class>

