<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
<form-beans>
<form-bean name="loginform" type="com.sachin.strutsexample.LoginForm"></form-bean >
</form-beans>
<action-mappings>
<action name ="loginform" path="/login" type="com.sachin.strutsexample.LoginAction">
<forward name="success" path="mysuccess" ></forward>
<forward name="faliure" path="mylogin" ></forward>
</action>
</action-mappings>
 <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
<plug-in className="org.apache.struts.tiles.TilesPlugin">
<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
<set-property property="moduleAware" value="true" />
</plug-in>
</struts-config>